{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "connect": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "replicas": { "type": "integer", "minimum": 0 },
        "image": {
          "type": "object",
          "required": ["repository"],
          "properties": {
            "repository": { "type": "string", "minLength": 1 },
            "tag": { "type": "string" },
            "pullPolicy": { "type": "string" }
          }
        },
        "resources": { "type": "object" }
      }
    },
    "rbac": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" }
      }
    }
  }
}
