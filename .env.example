# Spark K8s Environment Configuration
# Copy to .env and fill in values (DO NOT commit .env)

# =============================================================================
# S3/MinIO Credentials (REQUIRED)
# =============================================================================
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=http://minio:9000

# =============================================================================
# PostgreSQL - Hive Metastore (REQUIRED if hiveMetastore.enabled=true)
# =============================================================================
POSTGRESQL_HOST=postgresql-metastore
POSTGRESQL_PORT=5432
POSTGRESQL_USER=hive
POSTGRESQL_PASSWORD=
POSTGRESQL_DATABASE=metastore

# =============================================================================
# Airflow (REQUIRED if airflow.enabled=true)
# =============================================================================
AIRFLOW_FERNET_KEY=
AIRFLOW_SECRET_KEY=
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=

# =============================================================================
# MLflow (REQUIRED if mlflow.enabled=true)
# =============================================================================
MLFLOW_TRACKING_URI=
MLFLOW_S3_ENDPOINT_URL=http://minio:9000
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# =============================================================================
# Docker Registry (for pushing images)
# =============================================================================
REGISTRY_URL=ghcr.io
REGISTRY_USERNAME=
REGISTRY_PASSWORD=

# =============================================================================
# Kubernetes
# =============================================================================
KUBECONFIG=~/.kube/config
NAMESPACE=spark-operations

# =============================================================================
# Development/Testing (DO NOT use in production)
# =============================================================================
# DEV_S3_ACCESS_KEY=minioadmin
# DEV_S3_SECRET_KEY=minioadmin
# DEV_POSTGRESQL_PASSWORD=dev123
