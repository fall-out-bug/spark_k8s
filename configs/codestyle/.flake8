[flake8]
# Line length
max-line-length = 100

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info

# Error codes to ignore
ignore =
    # E203: Whitespace before ':' (conflicts with black)
    E203,
    # W503: Line break before binary operator (conflicts with black)
    W503,

# Per-file ignores
per-file-ignores =
    __init__.py: F401

# Maximum complexity
max-complexity = 10

# Show source code
show-source = true

# Statistics
statistics = True
