{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sdp://schema/index",
  "title": "Schema Registry",
  "description": "Index of SDP v0.3.0 schemas (workstream-driven development)",
  "version": "0.3.0",
  "note": "Multi-agent schemas (message, requirements, architecture, plan) archived in archive/v1.2/schema/",
  "schemas": {
    "status": {
      "path": "status.schema.json",
      "description": "Feature/Workstream state machine",
      "used_in": ["feature_XX/status.json", "workstreams/WS-XXX/status.json"]
    },
    "workstream": {
      "path": "workstream.schema.json",
      "description": "Workstream file structure validation",
      "used_in": ["workstreams/backlog/WS-*.md", "workstreams/active/WS-*.md", "workstreams/completed/*/WS-*.md"]
    }
  },
  "validation": {
    "tier_starter": ["status"],
    "tier_standard": ["status", "workstream"],
    "tier_enterprise": ["status", "workstream"]
  },
  "archived_schemas": {
    "location": "../archive/v1.2/schema/",
    "files": ["message.schema.json", "requirements.schema.json", "architecture.schema.json", "plan.schema.json"],
    "note": "These schemas were used in v1.2 multi-agent workflow. Archived 2026-01-07."
  }
}
