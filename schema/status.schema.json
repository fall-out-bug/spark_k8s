{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sdp://schema/status",
  "title": "Feature Status",
  "description": "Centralized state machine for feature lifecycle (SDP v0.3.0)",
  "type": "object",
  "required": ["feature_id", "tier", "phase", "mode", "iteration", "updated_at", "updated_by"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "feature_id": {
      "type": "string",
      "pattern": "^F[0-9]{2,3}$",
      "description": "Unique identifier for the feature (e.g., F24, F060)"
    },
    "tier": {
      "type": "string",
      "enum": ["starter", "standard", "enterprise"],
      "description": "Protocol tier controlling validation strictness"
    },
    "phase": {
      "type": "string",
      "enum": ["idea", "design", "implementation", "review", "uat", "deployment", "done", "blocked"],
      "description": "Current phase in the feature lifecycle"
    },
    "mode": {
      "type": "string",
      "enum": ["manual", "oneshot", "hotfix", "bugfix"],
      "description": "Execution mode determining workflow"
    },
    "iteration": {
      "type": "integer",
      "minimum": 1,
      "description": "Current iteration number (increments on review cycles)"
    },
    "workstreams": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "status"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^WS-[0-9]{3}-[0-9]{2}$",
            "description": "Unique workstream identifier (e.g., WS-024-01)"
          },
          "title": {
            "type": "string",
            "description": "Human-readable workstream title"
          },
          "status": {
            "type": "string",
            "enum": ["backlog", "active", "completed", "blocked"]
          },
          "scope": {
            "type": "string",
            "enum": ["SMALL", "MEDIUM", "LARGE"],
            "description": "Size estimate (LOC/tokens)"
          },
          "started_at": {
            "type": "string",
            "format": "date-time"
          },
          "completed_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "description": "Atomic tasks for feature implementation"
    },
    "blockers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "reason"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["review_rejected", "dependency", "external", "clarification_needed"]
          },
          "reason": {
            "type": "string",
            "description": "Description of the blocker"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "description": "Active blockers preventing phase advancement"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "updated_by": {
      "type": "string",
      "description": "Agent or user that made the last update"
    }
  },
  "additionalProperties": true
}
